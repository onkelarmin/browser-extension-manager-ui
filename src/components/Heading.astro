---
// Type imports
import type { HTMLAttributes } from "astro/types";

const sizes = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h4",
  h5: "h5",
  h6: "h6",
};

interface Props extends HTMLAttributes<keyof typeof sizes> {
  tag: keyof typeof sizes;
  size: keyof typeof sizes;
}

const { tag, size, ...rest } = Astro.props;
const CustomTag = tag;
---

<CustomTag class:list={["heading", sizes[size]]} {...rest}>
  <slot />
</CustomTag>

