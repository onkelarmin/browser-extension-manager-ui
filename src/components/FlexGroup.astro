---
// Types
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  colGap?: string;
  rowGap?: string;
  center?: boolean;
}

const { colGap = "md", rowGap = "md", center, ...rest } = Astro.props;

const colGapStr = `var(--space-cont-${colGap})`;
const rowGapStr = `var(--space-cont-${rowGap})`;
---

<div class:list={["flex-group", { center }]} {...rest}>
  <slot />
</div>

<style lang="scss" define:vars={{ colGapStr, rowGapStr }}>
  .flex-group {
    width: fit-content;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    column-gap: var(--colGapStr);
    row-gap: var(--rowGapStr);

    &.center {
      justify-content: center;
    }
  }
</style>
